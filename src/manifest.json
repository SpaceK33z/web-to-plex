{
	"name": "Movieo to Plex",
	"description": "Adds a button in Movieo to open the movie in Plex.",
	"manifest_version": 2,
	"version": "1.4",
	"icons": {
		"16": "img/16.png",
		"48": "img/48.png",
		"128": "img/128.png"
	},
	"content_scripts": [
		{
			"matches": ["https://movieo.me/*"],
			"js": ["axios.js", "history-hack.js", "main.js"],
			"css": ["main.css"]
		}
	],
	"background": {
		"scripts": ["axios.js", "background.js"]
	},
	"web_accessible_resources": [
		"img/*.svg"
	],
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"permissions": [
		"storage"
	],
	"optional_permissions": [
		"http://*/",
		"https://*/"
	]
}
